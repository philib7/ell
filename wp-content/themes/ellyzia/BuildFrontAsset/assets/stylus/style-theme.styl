.title
  font-size 30px
  font-weight bold
  color $gris

.barre-title
  width 60px
  height 4px

.element-list
  display flex
  justify-content space-between
  margin-top 4px
  width 50%
  padding 5px 0

.background-admin
  background rgb(205,220,249)
  background radial-gradient(circle, rgba(205,220,249,1) 0%, rgba(249,238,171,1) 0%, rgba(183,199,251,1) 100%)

.gradient-RoseBlue
  background rgb(205,220,249)
  background radial-gradient(circle, rgba(205,220,249,1) 0%, rgba(224,204,226,1) 0%, rgba(183,199,251,1) 100%)

.cloud1
  top 3%
  width 55%
  transition all 2.5s infiny

.cloud2
  bottom 3%
  right -20%
  width 55%
  transition all 2.5s

.logo
  fill #727380
  width 142px

.bg-gris
  background #f0f0fa

.max-width-1668
  max-width 1668px

.card
  min-height 741px
  &-discover
    transition all 0.75s
    transform translateY(-100%)

.card:hover
  .card-discover
    transform translateY(0)

.active-cloud
  &.cloud1
    animation 20s linear 0s infinite alternate move_cloud1
  &.cloud2
    animation 20s linear 0s infinite alternate move_cloud2

@keyframes move_cloud1 {
  from { margin-left: -16%; }
  to { margin-left: 0%; }
}

@keyframes move_cloud2 {
  from { margin-right: -2%; }
  to { margin-right: 10%; }
}